<H3>Hydrated Search</H3>


<form action="/hesearch/" method="post">
    <label for="terms"><INPUT type="submit" value="Search"></label>
    <input type="string" size=80 id="terms" name="terms" value="{{ terms }}" /><br/>
</form>

{{#if books}}
    <hr/>
    {{#each books}}
        <div class="book">
            <div class="controls">
                <a href="/edit/{{_id}}">Edit</a>
                <a href="/delete/{{_id}}">Delete</a>
            </div>
            <div class="score"><span class="label">Score:</span>{{_score}}</div>
            <div class="title"><span class="label">Title:</span> {{title}}</div>
            <div class="author"><span class="label">Author:</span> {{author}}</div>
            <div><span class="label">Description:</span> {{description}}
            </div>
            <div><span class="label">Content:</span><textarea class="contentdisplay">{{content}}</textarea>
            </div>
        </div>
        <hr/>
    {{/each}}
{{else}}
    <div>No data to display.</div>
{{/if}}
